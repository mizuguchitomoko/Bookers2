<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <div class="title">Bookers</div>
    <!-- loginの時のヘッダー -->
    <% if user_signed_in? %>
   
   <div class="icon">
   <div align="right">
   <span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to 'Home', user_path(current_user.id), methd: :get %></span>
    <span class="glyphicon glyphicon-user" aria-hidden="true"><%= link_to 'Users',  users_path, method: :get %></span>
    <span class="glyphicon glyphicon-book" aria-hidden="true"><%= link_to 'Books',  books_path, method: :get %></span>
   <span class="glyphicon glyphicon-log-out" aria-hidden="true"><%= link_to 'logout',  destroy_user_session_path, method: :delete %></span>
   </div></div>
   <!-- logoutの時のヘッダー -->
   <% else %>
   
   <div class="icon">
   <div align="right">
   <span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to 'Home', root_path, method: :get %></span></span>
   <span class="glyphicon glyphicon-link" aria-hidden="true"><%= link_to 'About', home_about_path, method: :get %></span>
   <span class="glyphicon glyphicon-edit" aria-hidden="true"><%= link_to 'sign up',  new_user_session_path, method: :get %></span>
   <span class="glyphicon glyphicon-log-in" aria-hidden="true"><%= link_to 'login', user_session_path, method: :post %></span>
  </div> </div>
  </header>
  <% end %>
    <%= yield %>
  </body>
</html>
