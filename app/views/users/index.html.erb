
<div class="container">  <!-- この行を追加 -->
  <div class="row">


    <div class="col-lg-3">


<h1>User info</h1>
<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%><br>
 <table class="table">
	<thead>
	 <tr>
	 <th>name</th><th><%= current_user.name %></th></tr>
	 <tr>
	 <th>introduction</th><th><%= current_user.introduction %></th></tr>

 </table>
   </thead>

   <%= link_to "",edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit" %>

    	<h1>New book</h1>
<%= render 'layouts/error.message'  %>
<% @book.errors.full_messages.each do |message| %>
 <% end %>

<%= form_with model: @book,  local:true do |f| %>
<!-- form_with model: @book, url:'/books', local:true do |f|  -->
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
   <%= f.submit 'Create Book' %>

<% end %>
</div>


<div class="col-lg-9">
<table class="table table-striped">

<h1>Users</h1>


    <table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>

		</tr>
	</thead>
	<% @users.each do |user| %>
	<tbody>

		<tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
      <td style="border:none;"><%= user.name %></td>
		  <td><%= link_to "Show",user_path(user) %></td>
		 </tr>

    <% end %>
  </tbody>
</table>

