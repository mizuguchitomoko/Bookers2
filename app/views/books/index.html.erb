<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<%= render 'layouts/error.message'  %>
  <% @book.errors.full_messages.each do |message| %>
<% end %>
<div class="container">  <!-- この行を追加 -->
　<div class="row">
　　<div class="col-xs-3">
　　　<h1>User info</h1>
      <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%><br>
      <table class="table">
        <thead>
          <tr>
　　　　　  <th>name</th>
	        <th><%= current_user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </thead>
      </table>
      <%= link_to "",edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit" %>
      <h1>New book</h1>
      <%= form_with model: @book,  local:true do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
       <%= f.text_area :body %>
        <%= f.submit "Create Book", class: "btn btn-primary" %>
       <% end %>
    </div>
    <div class="col-xs-9">
      <table class="table table-striped">
        <h1>Books</h1>
      <thead>
		<tr>
		<th></th>
	    <th>Title</th>
		<th>Opinion</th>
		</tr>
	  </thead>
	<% @books.each do |book| %>
	  <tbody>
		<tr>
		  <td>
		    <%= link_to user_path(book.user) do %>
		    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
		    <% end %></td>
		  <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
		</tr>
    <% end %>
       </tbody>
       </table>
    </div>
  </div>
</div>