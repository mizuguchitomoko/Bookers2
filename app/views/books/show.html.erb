<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">  <!-- この行を追加 -->
  <div class="row">
    <div class="col-xs-3">
 <%= render 'users/profile', user: @user %>
      <h1>New book</h1>
      <%= render 'layouts/error.message'  %>
      <%= form_with model: @book_new,  local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
　     　<%= f.submit "Create Book", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table table-striped">
	      <tbody>
	        <tr>
            <td style="border:none;"><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
            <br><br><br><%= link_to @user.name, user_path(@book.user.id) %></td>
            <td style="border:none;"><%= link_to @book.title,book_path(@book)%></td>
            <td style="border:none;"><%= @book.body %></td>
            <td>
              <% if current_user.already_favorited?(@book) %>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                  <i class="fas fa-heart"></i>
                <% end %>
                  <%= @book.favorites.count %>
                <% else %>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    <i class="far fa-heart"></i>
                  <% end %>
                  <%= @book.favorites.count %>
            </td>
                <% end %>
                <!-- コメント機能　-->
                  <td>
                      <div class="comment-list bt style-2" id="comments">
                        <div class="float-wrapper">
                          <div class="comment-count">コメント数：<%= @book.book_comments.count %></div>
                        </div>

                  </td>
                <!-- コメント機能　-->
            <% if @user.id == current_user.id %>
              <td><span><%= link_to 'Edit', edit_book_path(@book),class: "btn btn-success"  %></span></td>
		          <td><span><%= link_to 'Destroy', book_path(@book), class: "btn btn-danger" ,method: :delete, "data-confirm" => "本当に削除しますか？"  %></span></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <!-- コメント表示　-->
<% @book.book_comments.each do |book_comment| %>
 <table class="table">
  <thead>
    <tr>
      <th>
      <div class="comment-body bb">
        <div class="comment-avatar">
          <div class="avatar">
            <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%><br><br><br>
          </div>
        </div>
        <div class="comment-text">
          <div class="comment-author clearfix">
            <%= book_comment.user.name %>
            <span class="comment-meta">
            </span>
          </div>
        </th>
        <th>
          <div class="comment-entry"><%= book_comment.book_comment %></div>
          </th>
          <th>
            <% if book_comment.user == current_user %>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
             <% end %>
            </div>
          </th>
          <% end %>
            </div>
          </div>
        </thead>
      </table>
 
  
  

          
          
        <!-- コメント機能　-->
            <%= form_for [@book, @book_comment] do |f| %>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_area :book_comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
                </div>
              </div>
            <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
          <% end %>
          <!-- コメント機能　-->
    </div>
  </div>
</div>