<div class="container">  <!-- この行を追加 -->
  <div class="row">


    <div class="col-lg-3">

<h1>User info</h1>
<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%><br>
 <table class="table">
	<thead>
	 <tr>
	 <th>name</th><th><%= current_user.name %></th></tr>
	 <tr>
	 <th>introduction</th><th><%= current_user.introduction %></th></tr>

 </table>
   </thead>



    	<h1>New book</h1>
<%= form_with model: @book,  local:true do |f| %>
<!-- form_with model: @book, url:'/books', local:true do |f|  -->
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>


<div class="col-lg-9">
<table class="table table-striped">


<h1>Book detail</h1>
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>

		</tr>
	</thead>

	<tbody>

		<tr>
      <td style="border:none;"><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
      <td><%= link_to @user.name, user_path(@book.user.id) %></td>
      <td><%= link_to @book.title,book_path(@book)%></td>
      <td><%= @book.body %></td>
       <% if @user.id == current_user.id %>
      <td><%= link_to "edit", edit_book_path(@book)  %></td>
		  <td><%= link_to "destroy", book_path(@book), method: :delete %></td>
		 </tr>
     <% end %>

  </tbody>
</table>

